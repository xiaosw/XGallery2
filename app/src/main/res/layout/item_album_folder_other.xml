<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/view_height_album_other_icon"
            android:layout_height="@dimen/view_height_album_other_icon"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:layout_width="@dimen/view_height_icon"
            android:layout_height="@dimen/view_height_icon"
            android:padding="@dimen/view_height_icon_padding"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_forward_gray"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
