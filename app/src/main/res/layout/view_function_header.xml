<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_height_header"
    android:background="@color/clr_white_100"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_back"
        style="@style/btn_icon"
        android:src="@mipmap/ic_back_gray"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/title_header"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:focusable="true"
        android:clickable="true"
        android:textSize="18dp"
        android:textColor="@color/clr_black_100"
        android:layout_alignParentRight="true" />

</RelativeLayout>
