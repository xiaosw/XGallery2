<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xiaosw="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_header_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_height_header"
    android:background="@color/clr_white_100">

    <View
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent" />

    <com.xiaosw.gallery.viewer.CheckBoxTab
        android:id="@+id/cb_date_line_tab"
        style="@style/tab_icon_64"
        android:drawableTop="@drawable/selector_drawable_main_date_line_tab"
        android:text="@string/str_photo"
        xiaosw:drawable_width="@integer/drawable_tab_icon_size"
        xiaosw:drawable_height="@integer/drawable_tab_icon_size"
        android:textColor="@drawable/selector_text_main_header"
        android:checked="true" />

    <View
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent" />

    <com.xiaosw.gallery.viewer.CheckBoxTab
        android:id="@+id/cb_album_tab"
        style="@style/tab_icon_64"
        android:drawableTop="@drawable/selector_drawable_main_album_tab"
        android:text="@string/str_album"
        xiaosw:drawable_width="@integer/drawable_tab_icon_size"
        xiaosw:drawable_height="@integer/drawable_tab_icon_size" />

    <View
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent" />

</LinearLayout>
