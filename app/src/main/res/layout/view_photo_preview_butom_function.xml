<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_bottom_function"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_footer"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/view_height_icon"
            android:layout_height="@dimen/view_height_icon"
            android:padding="@dimen/view_height_icon_padding"
            android:clickable="true"
            android:src="@mipmap/quantum_ic_share_white_24"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/view_height_icon"
            android:layout_height="@dimen/view_height_icon"
            android:padding="@dimen/view_height_icon_padding"
            android:clickable="true"
            android:src="@mipmap/quantum_ic_edit_white_24"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="@dimen/view_height_icon"
            android:layout_height="@dimen/view_height_icon"
            android:padding="@dimen/view_height_icon_padding"
            android:clickable="true"
            android:src="@mipmap/quantum_ic_info_white_24"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/view_height_icon"
            android:layout_height="@dimen/view_height_icon"
            android:padding="@dimen/view_height_icon_padding"
            android:clickable="true"
            android:src="@mipmap/quantum_ic_delete_white_24"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:id="@+id/view_navigation_span"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>

