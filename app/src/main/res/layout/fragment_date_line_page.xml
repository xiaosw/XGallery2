<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xiaosw.gallery.viewer.DateLineRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:layout_marginRight="@dimen/padding_right_date_line"
        android:paddingLeft="@dimen/padding_left_date_line"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/iv_not_media"
        android:layout_width="312dp"
        android:layout_height="312dp"
        android:layout_marginTop="88dp"
        android:src="@mipmap/bg_album_set_is_null_all"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>
