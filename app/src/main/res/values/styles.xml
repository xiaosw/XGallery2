<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/clr_windown_background</item>
        <item name="android:textColor">@color/clr_white_100</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="GalleryTheme" parent="@style/AppTheme"></style>

    <style name="btn_icon">
        <item name="android:layout_width">@dimen/view_height_icon</item>
        <item name="android:layout_height">@dimen/view_height_icon</item>
        <item name="android:padding">@dimen/view_height_icon_padding</item>
    </style>

    <style name="title_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/clr_black_100</item>
        <item name="android:textSize">@dimen/text_size_header_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>

</resources>
